{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2019", 
      "esnext.String"
    ],
    "module": "CommonJS",
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "removeComments": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
